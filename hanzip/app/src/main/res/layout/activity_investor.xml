<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".investor_Activity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="투자자소개"
      tools:ignore="MissingConstraints" />

  <TextView
      android:id="@+id/ivfirst"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="74dp"
      android:layout_marginTop="80dp"
      android:layout_marginEnd="152dp"
      android:text="예비 투자자로써 \n나를 소개해주세요 :)"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="74dp"
      android:layout_marginRight="152dp" />

  <TextView
      android:id="@+id/ivprofile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="74dp"
      android:layout_marginTop="40dp"
      android:text="프로필"
      android:textSize="10sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivfirst"
      android:layout_marginLeft="74dp" />

  <ImageView
      android:id="@+id/ivimage"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="10dp"
      android:src="@mipmap/ic_launcher"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivprofile"
      android:layout_marginLeft="60dp" />
  <TextView
      android:id="@+id/ivnickname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="164dp"
      android:layout_marginTop="12dp"
      android:text="닉네임을 입력하세요"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivprofile"
      android:layout_marginLeft="164dp" />

  <EditText
      android:id="@+id/ed_tx_ivnick"
      android:layout_width="200dp"
      android:layout_height="48dp"
      android:layout_marginStart="164dp"
      android:layout_marginTop="12dp"
      android:hint="내용을 입력하세요"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivnickname"
      tools:ignore="MissingConstraints"
      android:layout_marginLeft="164dp" />

  <TextView
      android:id="@+id/ivPN"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="74dp"
      android:layout_marginTop="30dp"
      android:text="연락처를 입력하세요"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_tx_ivnick"
      tools:ignore="MissingConstraints"
      android:layout_marginLeft="74dp" />

  <EditText
      android:id="@+id/ed_tx_ivpn"
      android:layout_width="200dp"
      android:layout_height="48dp"
      android:layout_marginStart="74dp"
      android:layout_marginTop="12dp"
      android:hint="내용을 입력하세요"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivPN"
      android:layout_marginLeft="74dp" />

  <TextView
      android:id="@+id/ivmoney"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="74dp"
      android:layout_marginTop="30dp"
      android:text="가용자금을 알려주세요"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ed_tx_ivpn"
      tools:ignore="MissingConstraints"
      android:layout_marginLeft="74dp" />

  <EditText
      android:id="@+id/ed_tx_ivmoney"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="74dp"
      android:layout_marginTop="12dp"
      android:hint="내용을 입력하세요 "
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivmoney"
      tools:ignore="MissingConstraints,TouchTargetSizeCheck"
      android:layout_marginLeft="74dp" />

  <!--        app:layout_constraintStart_toEndOf="ed_tx_money"-->

  <TextView
      android:layout_width="50dp"
      android:layout_height="38dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="464dp"
      android:text="만원"
      android:textSize="20sp"
      app:layout_constraintStart_toEndOf="@id/ed_tx_ivmoney"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="MissingConstraints"
      android:layout_marginLeft="12dp" />

  <TextView
      android:id="@+id/ivchoice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="관심있는 투자를 알려주세요"
      android:layout_marginStart="74dp"
      android:layout_marginTop="30dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ed_tx_ivmoney"
      android:layout_marginLeft="74dp" />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="252dp"
      android:layout_marginTop="632dp"
      android:text="입력 완료"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="252dp" />


</androidx.constraintlayout.widget.ConstraintLayout>